
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
    <th>Name</th>
    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
    {
        <th>Update/Remove</th>
    }
    </thead>
    <tbody>
        @foreach (var orientation in ViewBag.Orientations)
        {
            <tr>
                <td> @orientation.Name</td>
                @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                {
                    <td>
                        @using (Html.BeginForm(actionName: "Edit", controllerName: "Orientation", method: FormMethod.Get,
                        routeValues: new { id = orientation.OrientationId }))
                        {
                            <button class="btn btn-link col-lg-3" type="submit">Update</button>
                        }

                        @using (Html.BeginForm(actionName: "Delete", controllerName: "Orientation", method: FormMethod.Post,
                        routeValues: new { id = orientation.OrientationId }))
                        {
                            @Html.HttpMethodOverride(HttpVerbs.Delete)
                            <button class="btn btn-link col-lg-3" type="submit">Remove</button>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    @Html.ActionLink("Add an orientation type", "New")
}