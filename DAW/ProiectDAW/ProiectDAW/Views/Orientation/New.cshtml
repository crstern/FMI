@model ProiectDAW.Models.Orientation
@{
    ViewBag.Title = "Add an orientation type";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Orientation", method: FormMethod.Post))
{
    @Html.LabelFor(ot => ot.Name, "Orientation:")
    <br />
    @Html.TextBoxFor(ot => ot.Name, null, new { placeholder = "Type in the orientation type", @class = "form-control" })
    @Html.ValidationMessageFor(ot => ot.Name, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Add</button>
}