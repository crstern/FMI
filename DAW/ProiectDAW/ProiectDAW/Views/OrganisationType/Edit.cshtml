@model ProiectDAW.Models.OrganisationType

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "OrganisationType", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(ot => ot.OrganisationTypeId)

    @Html.LabelFor(ot => ot.Name, "Organisation type(level of operation):")
    <br />
    @Html.EditorFor(ot => ot.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Name, "", new { @class = "text-danger" })
    <br />
    <br />
    
    <button type="submit" class="btn btn-primary">Update</button>
}